# Glorpi Prompt Studio - Environment Variables
# Copy this to .env.local and fill in your API keys

# ===================
# Provider API Keys
# ===================

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT)
OPENAI_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# OpenAI-Compatible Custom Endpoint
CUSTOM_OPENAI_API_KEY=
CUSTOM_OPENAI_BASE_URL=

# ===================
# Rate Limiting (Optional)
# ===================

# Upstash Redis (for production rate limiting)
# If not set, uses in-memory rate limiting (not suitable for production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===================
# Database (Required for persistence)
# ===================

# Neon Postgres - Pooled connection (for runtime)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Neon Postgres - Direct connection (for migrations)
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# ===================
# Encryption (Required in production)
# ===================

# 32-byte encryption key for API key storage (hex or base64)
# Generate with: openssl rand -hex 32
DATA_ENCRYPTION_KEY=

# ===================
# Application Settings
# ===================

# Base URL for the application (used for CORS, callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG=false
